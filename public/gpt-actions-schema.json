{
  "openapi": "3.1.0",
  "info": {
    "title": "Project Y Management API",
    "description": "API for managing Project Y repository via custom GPT",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://your-domain.vercel.app"
    }
  ],
  "paths": {
    "/api/gpt-manage": {
      "post": {
        "operationId": "manageRepository",
        "summary": "Manage repository actions",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "action": {
                    "type": "string",
                    "enum": ["analyze_repo", "update_content", "deploy_status"],
                    "description": "The management action to perform"
                  },
                  "content": {
                    "type": "string",
                    "description": "Content for updates"
                  },
                  "message": {
                    "type": "string",
                    "description": "Description of the requested change"
                  }
                },
                "required": ["action"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}
